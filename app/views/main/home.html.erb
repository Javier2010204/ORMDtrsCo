<p id="notice"><%= notice %></p>
<div class="row center-xs">
	<h1>Clientes</h1>	
</div>
<div class="row center-xs">
	<div class="col-sm-12 col-md-4">
		<div class="box">
			<table class="center-xs">
				<thead>
					<tr>
			    		<th>Nombre</th>
			    		<th>Telefono</th>
			    		<th>Correo</th>
			    		<th>Direccion</th>
			    		<th>Estado</th>
			    		<th colspan="3"></th>
			    	</tr>
				</thead>

				<tbody>
					<% @clients.each do |client| %>
						<tr>
							<td><%= client.name %></td>
			    			<td><%= client.phone %></td>
			    			<td><%= client.email %></td>
			    			<td><%= client.address %></td>
			    			<td><%= client.state %></td>
			    			<td><%= link_to 'Show', client %></td>
			    			<td><%= link_to 'Edit', edit_client_path(client) %></td>
			    			<td><%= link_to 'Destroy', client, method: :delete, data: { confirm: 'Are you sure?' } %></td>
			    		</tr>
			    	<% end %>
				</tbody>
			</table>		
		</div>
	</div>
</div>
<div>
	
</div>
<%= link_to 'Agregar Cliente', new_client_path, class:"mdl-button mdl-js-button mdl-button--raised mdl-button--colored" %>

